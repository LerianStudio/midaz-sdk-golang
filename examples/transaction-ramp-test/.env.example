# Transaction Ramp-Up Test Configuration
# Copy this file to .env and fill in the values

# Required: Organization and Ledger IDs
ORG_ID=your-organization-id
LEDGER_ID=your-ledger-id

# Required: Account IDs for transactions
FROM_ACCOUNT_ID=@external/USD
TO_ACCOUNT_ID=@destiny

# Ramp-Up Test Parameters
MAX_TPS=1000                 # Maximum TPS to reach (default: 1000)
TX_DURATION=1200              # Total duration in seconds (default: 60)
TX_WORKERS=10               # Number of parallel workers (default: 100)
TX_AMOUNT=1                  # Amount per transaction (in smallest unit)
TX_ASSET=USD                 # Asset code

# Ramp-up Configuration
RAMP_START_TPS=10           # Starting TPS (default: 10)
RAMP_STEP_TPS=10             # TPS increment per step (default: 10)
RAMP_STEP_DURATION=10        # Duration of each step in seconds (default: 10)

# API Configuration
MIDAZ_TRANSACTION_URL=

# Authentication
PLUGIN_AUTH_ENABLED=true
PLUGIN_AUTH_ADDRESS=
MIDAZ_CLIENT_ID=your-client-id
MIDAZ_CLIENT_SECRET=your-client-secret

