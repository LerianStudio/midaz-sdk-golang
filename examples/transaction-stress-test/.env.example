# Transaction Stress Test Configuration
# Copy this file to .env and fill in the values

# Required: Organization and Ledger IDs
ORG_ID=your-organization-id
LEDGER_ID=your-ledger-id

# Required: Account IDs for transactions
FROM_ACCOUNT_ID=@external/USD
TO_ACCOUNT_ID=@destiny

# Stress Test Parameters
TARGET_TPS=100               # Target transactions per second (default: 100)
TX_DURATION=60               # Duration in seconds to run the test (default: 60)
TX_WORKERS=100               # Number of parallel workers (default: 100)
TX_AMOUNT=1                  # Amount per transaction (in smallest unit)
TX_ASSET=USD                 # Asset code

# API Configuration
MIDAZ_TRANSACTION_URL=

# Authentication
PLUGIN_AUTH_ENABLED=true
PLUGIN_AUTH_ADDRESS=
MIDAZ_CLIENT_ID=your-client-id
MIDAZ_CLIENT_SECRET=your-client-secret
